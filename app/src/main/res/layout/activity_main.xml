<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/blue" android:layout_width="match_parent" android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android">
<include   android:id="@+id/my_toolbar" layout="@layout/toolbar">
</include>
    

    <LinearLayout android:layout_marginLeft="50dp" android:layout_marginTop="10dp"  android:layout_marginRight="50dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
<android.support.v7.widget.CardView android:onClick="listenOption" app:cardCornerRadius="50dp" app:cardBackgroundColor="@color/Green" android:layout_width="wrap_content" android:layout_margin="5dp"
                                    android:layout_height="wrap_content" android:layout_weight="0.5">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <ImageView android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="20dp" android:src="@drawable/ic_headphones"/>

        <TextView  android:layout_width="match_parent" android:layout_height="wrap_content"  android:text="Listen"  android:layout_marginBottom="30dp" android:textAlignment="center" />
    </LinearLayout>
</android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:onClick="favoritListOption" app:cardCornerRadius="50dp" app:cardBackgroundColor="@color/Green" android:layout_width="wrap_content" android:layout_margin="5dp"
                                            android:layout_height="wrap_content" android:layout_weight="0.5">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                <ImageView android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="20dp" android:src="@drawable/favicon"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"  android:text="FavoriteList"  android:layout_marginBottom="30dp" android:textAlignment="center" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout android:layout_marginLeft="50dp" android:layout_marginRight="50dp"  android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <android.support.v7.widget.CardView android:onClick="downloadsOption" app:cardCornerRadius="50dp" app:cardBackgroundColor="@color/Green" android:layout_width="wrap_content" android:layout_margin="5dp"
                                            android:layout_height="wrap_content" android:layout_weight="0.5">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                <ImageView android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="20dp" android:src="@drawable/ic_cloud_computing"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"  android:text="Downloads"  android:layout_marginBottom="30dp" android:textAlignment="center" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:onClick="lastListenOption" app:cardCornerRadius="50dp" app:cardBackgroundColor="@color/Green" android:layout_width="wrap_content" android:layout_margin="5dp"
                                            android:layout_height="wrap_content" android:layout_weight="0.5">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                <ImageView android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="20dp" android:src="@drawable/ic_stopwatch"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"  android:text="Last Listen"  android:layout_marginBottom="30dp" android:textAlignment="center" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout android:layout_marginLeft="50dp" android:layout_marginRight="50dp"  android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <android.support.v7.widget.CardView android:onClick="MenuOPtion" android:id="@+id/feedbackOption" app:cardCornerRadius="50dp" app:cardBackgroundColor="@color/Green" android:layout_width="wrap_content" android:layout_margin="5dp"
                                            android:layout_height="wrap_content" android:layout_weight="0.5">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                <ImageView android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="20dp" android:src="@drawable/ic_feedback"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"  android:text="FeedBack"  android:layout_marginBottom="30dp" android:textAlignment="center" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView app:cardCornerRadius="50dp" app:cardBackgroundColor="@color/Green" android:layout_width="wrap_content" android:layout_margin="5dp"
                                            android:layout_height="wrap_content" android:layout_weight="0.5">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                <ImageView android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="20dp" android:src="@drawable/ic_info"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"  android:text="Help"  android:layout_marginBottom="30dp" android:textAlignment="center" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    
    
</LinearLayout>