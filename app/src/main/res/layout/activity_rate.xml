<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/ratelayout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <RatingBar
            android:layout_alignParentTop="true"
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:layout_marginTop="100dp"
            android:rating="0"
            android:layout_centerHorizontal="true"
            android:stepSize="0.5" />
    
    <android.support.v7.widget.CardView android:layout_width="wrap_content" app:cardCornerRadius="30dp"  app:cardBackgroundColor="@color/blueviolet" android:id="@+id/submitRate" android:textColor="@color/white" android:layout_height="wrap_content" android:textSize="40sp" android:textAllCaps="false" android:layout_below="@+id/rating" android:layout_marginTop="50dp" android:layout_centerHorizontal="true">

      <TextView android:layout_width="wrap_content" android:text="Submitt" android:textColor="@color/white" android:padding="30dp" android:textSize="50sp" android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>