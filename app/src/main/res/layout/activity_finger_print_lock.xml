<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/myFingerActivity"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent" android:background="@color/black"
                android:layout_height="match_parent"
                tools:context=".FingerPrintLock">


    <TextView
            android:id="@+id/headingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:text="Fingerprint Authentication"
            android:textColor="@color/white"
            android:textSize="24sp" />

    <ImageView
            android:id="@+id/fingerprintImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/headingLabel"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher_web" />

    <TextView
            android:id="@+id/paraLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fingerprintImage"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:textColor="@color/white"
            android:text="Place your Finger on the Scanner to Proceed"
            android:textAlignment="center" />
</RelativeLayout>